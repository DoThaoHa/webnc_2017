@model WebAdvance.Session2.Models.GuestResponse

    <form action="RSVPForm" method="post">
        <div class="form-horizontal">
            <h4>Guest Response</h4>
            <hr />
            <div class="form-group">
                <label for="Name" class="control-label col-md-2">Name:</label>                
                <div class="col-md-10">
                    <input id="Name" name="Name" type="text" class="form-control" />                   
                </div>
            </div>
            <div class="form-group">
                <label for="Email" class="control-label col-md-2">Email:</label> 
                <div class="col-md-10">
                    <input id="Email" name="Email" type="text" class="form-control" />
                </div>
            </div>

            <div class="form-group">
                <label for="Phone" class="control-label col-md-2">Phone:</label> 
                <div class="col-md-10">
                    <input id="Phone" name="Phone" type="text" class="form-control" />
                </div>
            </div>

            <div class="form-group">
                <label for="WillAttend" class="control-label col-md-2">Will Attend:</label>
                <div class="col-md-10">
                    <select class="form-control list-box" id="WillAttend" name="WillAttend">
                        <option selected="selected" value="">Not Set</option>
                        <option value="true">True</option>
                        <option value="false">False</option>
                    </select>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    </form>    
    <div>
        @Html.ActionLink("Back to Home", "Index")
    </div>
